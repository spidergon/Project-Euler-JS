{
  "root": true,
  "extends": ["eslint:recommended", "standard"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "jest": true
  },
  "plugins": ["babel", "html"],
  "rules": {
    "no-debugger": 1,
    "no-alert": 0,
    "no-console": 0,
    "no-var": "error",
    "prefer-const": [
      "error",
      {
        "destructuring": "all"
      }
    ],
    "import/prefer-default-export": 1,
    "radix": ["error", "as-needed"],
    "no-shadow": [
      2,
      {
        "hoist": "all",
        "allow": ["resolve", "reject", "done", "next", "err", "error"]
      }
    ],
    "babel/new-cap": 1,
    "babel/no-invalid-this": 1,
    "babel/no-unused-expressions": 1,
    "babel/valid-typeof": 1
  }
}
